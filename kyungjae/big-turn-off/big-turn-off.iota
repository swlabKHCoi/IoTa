rule "big-turn-off"
    
    //device들을 각각 선택하게 하는 것이 아닌 사용자가 string형식으로
    //입력 했을때 작동하면 좋을 것 같다.

    device switch : switch;
    input television : bool;
    input airconditional : bool;

    switch.switch [ .~> off ];  
    
    television == true;
    switch := off

  | airconditional == true;
    switch := off

end
